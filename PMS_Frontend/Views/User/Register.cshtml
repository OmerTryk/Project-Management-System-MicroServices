@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_LayoutLR.cshtml";
}

<div class="d-flex justify-content-center align-items-center py-5">
    <div class="card shadow-lg p-4" style="width: 500px; border-radius: 15px;">
        <div class="text-center mb-4">
            <div class="mx-auto mb-3" style="width: 70px; height: 70px; background-color: #4361ee; border-radius: 50%; display: flex; justify-content: center; align-items: center;">
                <i class="fas fa-user-plus fa-3x" style="color: white;"></i>
            </div>
            <h3 class="page-title">Yeni Hesap Oluştur</h3>
            <p class="text-muted">Hızlı ve kolay bir şekilde kayıt olun</p>
        </div>

        <form asp-action="register" asp-controller="user" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="firstName" class="form-label">Ad</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Adınızı girin" required>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="lastName" class="form-label">Soyad</label>
                        <input type="text" class="form-control" id="lastName" name="lastname" placeholder="Soyadınızı girin" required>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="nickName" class="form-label">Kullanıcı Adı</label>
                <input type="text" class="form-control" id="nickName" name="nickName" placeholder="Kullanıcı adınızı girin" required>
            </div>

            <div class="form-group mb-3">
                <label for="email" class="form-label">E-posta</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="E-posta adresinizi girin" required>
            </div>

            <div class="form-group mb-4">
                <label for="hashpassword" class="form-label">Şifre</label>
                <input type="password" class="form-control" id="hashpassword" name="hashpassword" placeholder="Güçlü bir şifre oluşturun" required>
                <small class="form-text text-muted">Şifreniz en az 8 karakter uzunluğunda olmalıdır.</small>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg">Kaydol</button>
            </div>

            <div class="text-center">
                <p>
                    Zaten bir hesabınız var mı?
                    <a asp-action="Login" asp-controller="User" class="fw-bold">Giriş Yapın</a>
                </p>
            </div>
        </form>
    </div>
</div>